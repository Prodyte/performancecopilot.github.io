---
- name: Run Slackin
  hosts: osas
  tasks:
    - name: useradd slackin
      user:
        name: slackin

    - name: git clone slackin
      become_user: slackin
      git:
        repo: https://github.com/rauchg/slackin
        dest: ~/slackin
        force: yes

    - name: Install now (from NPM)
      shell: "npm install -g"
      args:
        chdir: /home/slackin/slackin
