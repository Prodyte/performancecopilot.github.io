[Unit]
Description=Slack-IRC Bridge
After=network-online.target


[Service]
PIDFile=/home/lberk/.fetchmail.pid-inbox
WorkingDirectory=/home/lberk
ExecStart=/usr/bin/fetchmail -v -v -v --fetchmailrc /home/lberk/.fetchmailrc -r INBOX --logfile /home/lberk/.fetchmail.inbox.log --pidfile /home/lberk/.fetchmail.pid-inbox
#RestartSec=1
Restart=always

[Install]
WantedBy=multi-user.target
